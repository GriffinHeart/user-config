# This is Git's per-user configuration file.
[user]
  name = Hugo Almeida
  email = hugofalmeida@gmail.com
[includeIf "gitdir:~/src/work/"]
  path =  ~/.config/git/work_config
[push]
  default = current
[pull]
  ff = only
[rebase]
  autostash = true
[merge]
  tool = kdiff3
[diff]
  guitool = kdiff3
[mergetool "kdiff3"]
  trustExitCode = false
[core]
  excludesfile = ~/.config/git/.gitignore_global
[alias]
  co = checkout
  s = stash
  sp = stash pop
  su = !git stash show -p | git apply -R
  sa = stash apply
  am = commit --amend --no-edit
  lazy = ! git pull && git commit -a -m \"commit\" && git push
  rc = rebase --continue
  ra = rebase --abort
  rs = rebase --skip
  rd = rebase -i develop
  r = rebase -i main
  mt = mergetool
[difftool "winkdiff3"]
  cmd= /mnt/c/Program\\ Files/KDiff3/kdiff3.exe "$(wslpath -aw $LOCAL)" "$(wslpath -aw $REMOTE)"
[mergetool "winkdiff3"]
  cmd = /mnt/c/Program\\ Files/KDiff3/kdiff3.exe "$(wslpath -aw $BASE)" "$(wslpath -aw $LOCAL)" "$(wslpath -aw $REMOTE)" -o "$(wslpath -aw $MERGED)"
  trustExitCode = false
  keepBackup = false
[credential]
  helper = osxkeychain
[init]
  defaultBranch = main
